font=rgba(0,0,0,.75)
*
    margin 0
    padding 0
a
	text-decoration none
	text-align center
	color #000
	font-size 2.3rem
header
	a
		width 7.8rem
		color font
		&:hover
			text-decoration none
			color darken(font, 20%)
		img
			width 4rem
	.btn-group,span
		text-align center
		width 8rem
		line-height 3.4rem
	.sign
		width 4rem
		font-size 1rem
//.选择器
.container
	font-size 2.8rem
.img
	width 100%
.default
	background-color #deb
.dark
	background-color #000
	color #fff
	button
		background-color rgba(255,255,255,.75)
	a
		color #fff
		&:hover
			color: #ddd
		img
			-webkit-filter drop-shadow(rgb(255, 204, 153) 4rem 0);
			filter drop-shadow(rgb(255, 204, 153) 4rem 0);
			margin-left -8rem
.quite
	background-color rgb(254, 254, 234)
.light
	background-color #fff
	a
		&:hover
			color: #666
.alertContainer
	position fixed
	top 3rem
	left 5rem
	z-index 3
	width 100%
	pointer-events none 
	height 5rem
	width 40rem
	.alert
		height 5rem
		font-size 1.2rem
		pointer-events auto
//#选择器
#test//测试页
	font-size 1rem
	text-align center
	.form-control
		width 29%
		vertical-align middle
		display inline-block
		margin 1rem 0 1rem
#vote//投票页
	text-align center
	li
		font-size 3rem
		list-style none
		span
			vertical-align middle
		.btn
			font-size 2rem
			vertical-align middle
#signin,#signup//登录注册页
	font-size 1.5rem
	.form-control
		width 22rem
		font-size 2rem
		display inline-block
		margin .5rem .5rem .5rem 5rem
	p
		text-align center
		button
			font-size 1.5rem
		a
			font-size 1.8rem
			vertical-align middle

